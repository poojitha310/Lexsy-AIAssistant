# App Configuration
APP_NAME=Lexsy AI Assistant
DEBUG=True

# Database
DATABASE_URL=sqlite:///./lexsy.db

# Google OAuth & Gmail API
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
